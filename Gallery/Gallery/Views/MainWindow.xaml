<Window x:Class="Gallery.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Art Gallery" Height="450" Width="800" Background="#FFF7E9">
    <Grid>
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
            <TextBlock Text="Welcome to the Art Gallery" FontSize="24" FontWeight="Bold" Margin="0,0,0,20"/>
            <Button Content="Register" Width="150" Height="40" Margin="0,0,0,10" Click="Register_Click"/>
            <Button Content="Login" Width="150" Height="40" Click="Login_Click"/>
        </StackPanel>
    </Grid>
</Window>